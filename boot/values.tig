use symbols

type value = {
   string_val: symbol,
   int_val: int,
   bool_val: bool
}

make_integer_value(n: int): value =
   value { string_val = nil, int_val = n, bool_val = false }

make_string_value(s: symbol): value =
   value { string_val = s, int_val = 0, bool_val = false }

make_boolean_value(b: boolean): value =
   value { string_val = nil, int_val = 0, bool_val = b }


