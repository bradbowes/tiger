/*
   Write file to STD_OUTPUT. Use
   STD_INPUT if no file is specified.
*/

let
   file =
      if command_argcount() < 2 then 0
      else open_input(command_getarg(1))
   ch =
      if file <> 0 then
         getchar_file(file)
      else
         begin
            writeln("ERROR: can't open file!")
            chr(-1)
         end
in
   while ch <> chr(-1) do
      begin
         putchar(ch)
         ch := getchar_file(file)
      end

   close_file(file)
end
