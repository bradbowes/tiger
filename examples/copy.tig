/*
   Write file to STD_OUTPUT. Use
   STD_INPUT if no file is specified.
*/

let
   file =
      if command_argcount() = 1 then STD_INPUT
      else open_input(command_getarg(1))
   ch =
      if file >= 0 then
         getc(file)
      else
         begin
            writeln("ERROR: can't open file!")
            chr(-1)
         end

in
   while ch <> chr(-1) do
      begin
         putchar(ch)
         ch := getc(file)
      end
   close(file)
end
